<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfomationFragment">

    <!-- TODO: Update blank fragment layout -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightyellow">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="251dp"
            android:layout_height="66dp"
            android:layout_marginStart="69dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="69dp"
            android:fontFamily="@font/bubblegum_sans"
            android:text="Information"

            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_whatisrecycling"
            android:layout_width="306dp"
            android:layout_height="67dp"

            android:layout_marginStart="52dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="53dp"
            android:fontFamily="@font/patua_one"
            android:text="What is Recycling?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <Button
            android:id="@+id/btn_recyclabletype"
            android:layout_width="306dp"
            android:layout_height="67dp"
            android:layout_marginStart="53dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="53dp"
            android:fontFamily="@font/patua_one"
            android:text="What You Can Recycle?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_whatisrecycling" />

        <Button
            android:id="@+id/btn_benefits"
            android:layout_width="306dp"
            android:layout_height="67dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="53dp"
            android:fontFamily="@font/patua_one"
            android:text="Benefits of Recycling"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_recyclabletype" />

        <Button
            android:id="@+id/btn_facts"
            android:layout_width="306dp"
            android:layout_height="67dp"
            android:layout_marginStart="53dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="53dp"
            android:fontFamily="@font/patua_one"
            android:text="Facts about Recycling"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_benefits" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>