<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_gravity="center"
    android:padding="40dp"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/btnProfilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:src="@drawable/ic_baseline_account_circle_24"
        android:text="EDIT" />


    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="First Name" />

        <EditText
            android:id="@+id/profFirst"
            android:hint="First name..."
            android:inputType="textPersonName" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Last Name" />

        <EditText
            android:id="@+id/profLast"
            android:hint="Last name..."
            android:inputType="textPersonName" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="E-mail Address" />

        <EditText
            android:id="@+id/profEmail"
            android:hint="Email..."
            android:inputType="textEmailAddress" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Password" />

        <Button
            android:id="@+id/profileChangePwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:text="Change Password" />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/profHide1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Current Password"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/profCurrPass"
            android:hint="******"
            android:inputType="textPassword"
            android:visibility="gone"/>
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/profHide2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="New Password"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/profNewPass"
            android:hint="******"
            android:inputType="textPassword"
            android:visibility="gone"/>
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/profHide3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Confirm Password"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/profPassConf"
            android:hint="******"
            android:inputType="textPassword"
            android:visibility="gone"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>
    </TableRow>

    <TableRow
        android:layout_width="257dp"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/profileEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:text="EDIT" />

    </TableRow>

    <TableRow
        android:layout_width="257dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/profError"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_span="3"
            android:text="Loading user profile..."
            android:textAlignment="viewStart"
            android:textSize="20dp" />


    </TableRow>


</TableLayout>